<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/gris_perla_claro"
    android:layout_marginTop="40dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- Título grande arriba -->
        <TextView
            android:id="@+id/tvLoginTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INICIAR SESIÓN"
            android:textColor="@color/lavanda_suave"
            android:textSize="32sp"
            android:textStyle="bold"
            android:fontFamily="sansSerif"
            android:layout_marginBottom="36dp"
            android:gravity="center"
            android:layout_marginTop="90dp"/>

        <!-- Card container with shadow and rounded corners -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="28dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="28dp"
                android:gravity="center_horizontal">

                <!-- Username input with icon -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:startIconDrawable="@android:drawable/ic_menu_myplaces"
                    app:startIconTint="@color/lavanda_suave"
                    app:boxBackgroundColor="@color/white"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusTopStart="14dp"
                    app:boxCornerRadiusTopEnd="14dp"
                    app:boxStrokeColor="@color/lavanda_suave"
                    app:hintAnimationEnabled="true"
                    android:layout_marginBottom="18dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etUsername"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="Correo electrónico"
                        android:textColor="@color/gris_oscuro"
                        android:textColorHint="@color/gris_oscuro"
                        android:textSize="16sp"
                        android:gravity="center_vertical|start"/>

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Password input with icon -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:startIconDrawable="@android:drawable/ic_lock_lock"
                    app:startIconTint="@color/lavanda_suave"
                    app:boxBackgroundColor="@color/white"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusTopStart="14dp"
                    app:boxCornerRadiusTopEnd="14dp"
                    app:boxStrokeColor="@color/lavanda_suave"
                    app:hintAnimationEnabled="true"
                    app:passwordToggleEnabled="true"
                    android:layout_marginBottom="28dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="Contraseña"
                        android:inputType="textPassword"
                        android:textColor="@color/gris_oscuro"
                        android:textColorHint="@color/gris_oscuro"
                        android:textSize="16sp"
                        android:gravity="center_vertical|start"/>

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Olvidé mi contraseña link -->
                <TextView
                    android:id="@+id/forgotPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Olvidé mi contraseña"
                    android:textColor="@color/lavanda_suave"
                    android:textSize="14sp"
                    android:gravity="end"
                    android:layout_marginBottom="24dp"/>

                <!-- Login button con color lavanda suave -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLogin"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/lavanda_suave"
                    android:text="INICIAR SESIÓN"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:elevation="8dp"
                    android:layout_marginBottom="8dp"/>

                <!-- Error -->
                <TextView
                    android:id="@+id/tvLoginError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Usuario o contraseña incorrectos"
                    android:textColor="@color/rojo_vino_tenue"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Copyright -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SmartFlow © 2025"
            android:textColor="@color/gris_oscuro"
            android:textSize="12sp"
            android:layout_marginTop="32dp"
            android:gravity="center" />
    </LinearLayout>
</ScrollView>
